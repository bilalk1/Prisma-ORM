type User {
  id: ID! @id
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @id
  title: String!
  published: Boolean! @default(value: false)
  author: User @relation(link: INLINE)
}

type Contact {
  id: ID! @id
  firstName: String!
  lastName: String!
  dob: String!
  nick: String!
  note: String!
  gender: String!
  address: String!
  groups: [Group!] @relation(name: "ContactGroup" link: TABLE)
}

type Group {
  id: ID! @id
  name: String!
  description: String
  type: String
  contacts:[Contact!] @relation(name: "ContactGroup")
}